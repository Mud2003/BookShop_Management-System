
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Item</h2>
            <span class="text-light">Use the below form to Update an item</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_item">
    <div class="new_item">
        <div class="form-group">
            <label for="Item Name" class="text-light">Item Name</label>
            <input type="hidden" name="id" value="<%= item._id %>">
            <input type="text" name="item_name" value="<%= item.item_name %>">
        </div>
        <div class="form-group">
            <label for="Description" class="text-light">Description</label>
            <input type="text" name="description" value="<%= item.description%>" >
        </div>
        <div class="form-group">
            <label for="Quantity" class="text-light">Quantity</label>
            <input type="text" name="quantity" value="<%= item.quantity%>" >
        </div>
        <div class="form-group">
            <label for="Unit Price" class="text-light">Unit Price</label>
            <input type="text" name="unit_price" value="<%= item.unit_price%>" >
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

