 <!-- form handling -->
 <form action="/api/items" method="POST" id="add_item">
    <div class="new_item">
        <div class="form-group">
            <label for="Item Name" class="text-light">Item Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="item_name" value="" >
        </div>

        <div class="form-group">
            <label for="Description" class="text-light">Description</label>
            <input type="text" name="description" value="" >
        </div>

        <div class="form-group">
            <label for="Quantity" class="text-light">Quantity</label>
            <input type="text" name="quantity" value="" >
        </div>

        <div class="form-group">
            <label for="Unit Price" class="text-light">Unit Price</label>
            <input type="text" name="unit_price" value="" >
        </div>
        

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>